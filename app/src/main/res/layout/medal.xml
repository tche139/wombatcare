<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/spark_button1"
        app:sparkbutton_activeImage="@drawable/medal_grey_1"
        app:sparkbutton_animationSpeed="999999999"
        app:sparkbutton_iconSize="80dp"
        app:sparkbutton_inActiveImage="@drawable/medal_grey_1"
        app:sparkbutton_primaryColor="@color/colorPrimary"
        app:sparkbutton_secondaryColor="@color/colorAccent"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="180dp"
        android:onClick="medalClick"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/medal_grey_1"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="180dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/spark_button3"
        app:sparkbutton_activeImage="@drawable/medal_grey_3"
        app:sparkbutton_animationSpeed="999999999"
        app:sparkbutton_iconSize="80dp"
        app:sparkbutton_inActiveImage="@drawable/medal_grey_3"
        app:sparkbutton_primaryColor="@color/colorPrimary"
        app:sparkbutton_secondaryColor="@color/colorAccent"
        android:layout_width="164dp"
        android:layout_height="164dp"
        app:srcCompat="@drawable/medal_grey_3"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="180dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="180dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spark_button5" />

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/spark_button4"
        app:sparkbutton_activeImage="@drawable/medal_grey_4"
        app:sparkbutton_animationSpeed="999999999"
        app:sparkbutton_iconSize="80dp"
        app:sparkbutton_inActiveImage="@drawable/medal_grey_4"
        app:sparkbutton_primaryColor="@color/colorPrimary"
        app:sparkbutton_secondaryColor="@color/colorAccent"
        android:layout_width="164dp"
        android:layout_height="164dp"
        app:srcCompat="@drawable/medal_grey_4"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="180dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="180dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spark_button2" />

    <ImageView
        android:id="@+id/medal_popup"
        android:layout_width="315dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorAccent"
        app:layout_constraintVertical_bias="0.48" />

    <ImageView
        android:id="@+id/medal_closs_button"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:elevation="20dp"
        android:visibility="invisible"
        android:clickable="true"
        android:onClick="close"
        app:srcCompat="@drawable/close"
        app:layout_constraintTop_toTopOf="@+id/medal_popup"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/medal_popup" />

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/spark_button2"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="180dp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:sparkbutton_activeImage="@drawable/medal_grey_2"
        app:sparkbutton_animationSpeed="999999999"
        app:sparkbutton_iconSize="80dp"
        app:sparkbutton_inActiveImage="@drawable/medal_grey_2"
        app:sparkbutton_primaryColor="@color/colorPrimary"
        app:sparkbutton_secondaryColor="@color/colorAccent"
        app:srcCompat="@drawable/medal_grey_2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/spark_button5"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:layout_marginEnd="180dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="180dp"
        android:layout_marginStart="24dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:sparkbutton_activeImage="@drawable/medal_grey_5"
        app:sparkbutton_animationSpeed="999999999"
        app:sparkbutton_iconSize="80dp"
        app:sparkbutton_inActiveImage="@drawable/medal_grey_5"
        app:sparkbutton_primaryColor="@color/colorPrimary"
        app:sparkbutton_secondaryColor="@color/colorAccent"
        app:srcCompat="@drawable/medal_grey_5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spark_button1" />

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/spark_button6"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="180dp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:sparkbutton_activeImage="@drawable/medal_grey_6"
        app:sparkbutton_animationSpeed="999999999"
        app:sparkbutton_iconSize="80dp"
        app:sparkbutton_inActiveImage="@drawable/medal_grey_6"
        app:sparkbutton_primaryColor="@color/colorPrimary"
        app:sparkbutton_secondaryColor="@color/colorAccent"
        app:srcCompat="@drawable/medal_color_6"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spark_button4" />


</android.support.constraint.ConstraintLayout>